<%- model_class = Product -%>
<div class="page-header">
  <h1><%=t '.title' %></h1>
</div>
<%= content_tag_for :div, @products do |product| %>
  <%= link_to product_path(product) do %>
    <h2><%= product.name %> <small><%= product.manufacturer %></small></h2>
  <% end %>
  <%= render product %>
<% end %>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_product_path,
            :class => 'btn btn-primary' %>
