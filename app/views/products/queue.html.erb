<%- model_class = Product -%>
<div class="page-header">
  <h1><%=t '.title' %></h1>
</div>

<% if @products.count > 0 %>
  <%= content_tag_for :div, @products do |product| %>
    <%= link_to product_path(product) do %>
      <h3><%= product.name %> <small><%= product.manufacturer %></small></h3>
    <% end %>
    <%= render product %>
  <% end %>
<% else %>
  <strong>
    <%= t(".no_product_in_queue") %>
  </strong>
<% end %>
