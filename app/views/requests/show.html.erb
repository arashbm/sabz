<%- model_class = Request -%>
<div class="page-header">
  <h1><%= @request.name %></h1>
</div>

<ul class="unstyled">
  <li>
    <strong><%= model_class.human_attribute_name(:requester) %>:</strong>
    <%= @request.requester.full_name_with_institute %>
  </li>
  <li>
    <strong><%= model_class.human_attribute_name(:quantity) %>:</strong>
    <%= @request.quantity %>
  </li>
  <% unless @request.manufacturer.blank? %>
    <li>
      <strong><%= model_class.human_attribute_name(:manufacturer) %>:</strong>
      <%= @request.manufacturer %>
    </li>
  <% end %>
  <% unless @request.sku.blank? %>
    <li>
      <strong><%= model_class.human_attribute_name(:sku) %>:</strong>
      <%= @request.sku %>
    </li>
  <% end %>
  <% unless @request.url.blank? %>
    <li>
      <strong><%= model_class.human_attribute_name(:url) %>:</strong>
      <%= link_to @request.url do %>
        <i class='icon-external-link'></i>
      <% end %>
    </li>
  <% end %>
  <% unless @request.discription.blank? %>
    <div>
      <%= simple_format @request.discription %>
    </div>
  <% end %>
</ul>

<div class="form-actions">
  <% if can? :update, @request %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_request_path(@request), :class => 'btn' %>
  <% end %>
  <% if can? :destroy, @request %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
      request_path(@request),
      :method => 'delete',
      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
      :class => 'btn btn-danger' %>
    <% end  %>
  </div>
